{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ps2icon_to_obj Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ps2icon_to_obj",
            "args": ["-f", "${workspaceFolder}/Test Saves & Tools/Test Save/slime1.ico", "-v"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "type summary add --no-value --python-function lldb.macosx.heap.dylib.heap_walk --category Heap --regex ^.*$",
                    "ignoreFailures": true
                },
                {
                    "text": "settings set target.process.thread.step-avoid-regexp \"\"",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "debug build"
        }
    ]
}