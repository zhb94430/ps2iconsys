{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Debug Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build/",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "debug build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/",
                "--config", "Debug",
                "--target", "all",
            ],
            "dependsOn": ["Configure Debug Build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}